{
  "name": "YOLO26 Streamlit",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "customizations": {
    "vscode": {
      "settings": {
        "remote.autoForwardPorts": false,
        "remote.restoreForwardedPorts": false
      }
    }
  },
  "forwardPorts": [
    8501
  ],
  "portsAttributes": {
    "8501": {
      "label": "Streamlit",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get upgrade -y && python -m pip install --upgrade pip && pip install -r requirements.txt",
  "postStartCommand": "nohup streamlit run app.py --server.port 8501 --server.address 0.0.0.0 > /tmp/streamlit.log 2>&1 &"
}
