{
  "name": "YOLO26 Streamlit",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "customizations": {
    "vscode": {
      "settings": {
        "remote.autoForwardPorts": false,
        "remote.restoreForwardedPorts": false
      }
    }
  },
  "forwardPorts": [
    8501
  ],
  "portsAttributes": {
    "8501": {
      "label": "Streamlit",
      "onAutoForward": "notify"
    }
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.local/bin"
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libgl1 && python -m pip install --upgrade pip && pip install -r requirements.txt"
}
